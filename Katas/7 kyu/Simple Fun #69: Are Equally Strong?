def are_equally_strong(your_left, your_right, friends_left, friends_right):
    
    if your_left > your_right:
        x = your_left
    else:
        x = your_right
        
    if friends_left > friends_right:
        i = friends_left
    else:
        i = friends_right
    
    if (your_left + your_right) == (friends_left + friends_right) and x == i:
        return True
    else:
        return False
